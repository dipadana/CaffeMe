
<%- include('../../partials/head') %>
    <div class="mt-4 container">
        <div class="container h-100">
                <div class="row h-100 justify-content-center align-items-center">
                    <div class="col-12 mx-auto">
                        <div class="jumbotron">
                                <% err.forEach((err, index) => {
                                    let msg = 
                                    `<p style="color:red">${err}</p>`
                                    __append(msg) 
                                })%>


                                <h1 style="text-align: center">Create New Menu</h1>
                                <form method = "POST" action = "/menu/menus/add">


                                    <div class="form-group">
                                    <label for="inputMenu">Menu Name</label>
                                    <input type="text" name="menu_name" class="form-control" id="inputMenu" placeholder= "Enter new menu here">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPrice">Price</label>
                                        <input type="number" name="price" class="form-control" id="inputPrice" placeholder="Enter the price"  >
                                    </div>
                                   
                                    <input type="submit" class="btn btn-primary" value="submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('../../partials/footer') %>